{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}
